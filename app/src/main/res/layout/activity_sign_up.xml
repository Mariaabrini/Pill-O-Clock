<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_sign1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="23dp"
            android:paddingBottom="25dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto"
            android:textColor="@color/teal_400"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/input_username"
            android:hint="username"
            android:inputType="textPersonName"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/input_email"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/input_password"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:textSize="23sp"/>
        <EditText
            android:id="@+id/input_repassword"
            android:hint="re-enter password"
            android:inputType="textPassword"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:textSize="23sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="15sp"
            android:orientation="vertical"
            android:id="@+id/caregiverLayout"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/roboto"
                android:paddingBottom="14sp"
                android:layout_gravity="center_horizontal"
                android:text="Choose caregiver : "
                android:textSize="23sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/caregiver_spinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:contentDescription="caregiver Name"
                android:labelFor="@id/caregiver_spinner" />
        </LinearLayout>

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="@color/teal_400"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="80sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAllCaps="false">
        </Button>

    </LinearLayout>
</LinearLayout>
